<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.dvt.spillay.flyaway">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViewModel.AddFlight.presentation.flight.add.AddFlight"></activity>
        <activity android:name=".ViewModel.AddFlight.presentation.flight.details.FlightDetailsActivity"></activity>
        <activity android:name=".ViewModel.AddFlight.presentation.flight.list.FlightListActivity"></activity>
        <activity android:name=".ViewModel.AddFlight.presentation.flight.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        android:supportsRtl="true"
    </application>
</manifest>